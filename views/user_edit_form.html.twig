{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <h2>{{ block('title') }}</h2>

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_errors(basicUserDataForm.username) }}
    {{ form_errors(basicUserDataForm.email) }}
    {{ form_errors(basicUserDataForm.role) }}

    {{ form_errors(userPasswordForm.password.first) }}
    {{ form_errors(userPasswordForm.password.second) }}

    <div class="well">
        {{ form_start(basicUserDataForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <fieldset>
                <legend>Informations</legend>

                <div class="form-group">
                    {{ form_label(basicUserDataForm.username, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    <div class="col-sm-4">
                        {{ form_widget(basicUserDataForm.username, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(basicUserDataForm.email, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    <div class="col-sm-4">
                        {{ form_widget(basicUserDataForm.email, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(basicUserDataForm.role, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    <div class="col-sm-2">
                        {{ form_widget(basicUserDataForm.role, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-3">
                        <input type="submit" class="btn btn-primary" value="Valider" />
                    </div>
                </div>
            </fieldset>
        {{ form_end(basicUserDataForm) }}

        {{ form_start(userPasswordForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <fieldset>
                <legend>Sécurité</legend>

                <div class="form-group">
                    {{ form_label(userPasswordForm.password.first, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    <div class="col-sm-4">
                        {{ form_widget(userPasswordForm.password.first, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(userPasswordForm.password.second, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    <div class="col-sm-4">
                        {{ form_widget(userPasswordForm.password.second, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-3">
                        <input type="submit" class="btn btn-primary" value="Valider" />
                    </div>
                </div>
            </fieldset>
        {{ form_end(userPasswordForm) }}
    </div>
{% endblock %}
