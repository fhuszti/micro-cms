{% extends "layout.html.twig" %}

{% block title %}
    Connexion
{% endblock %}

{% block content %}
    <form method="post" action="{{ path('login_check') }}" role="form" class="form-horizontal well">
        <fieldset>
            <legend>{{ block('title') }}</legend>

            {% if error %}
                <div class="alert alert-danger">
                    <strong>Erreur !</strong> {{ error }}
                </div>
            {% endif %}

            <div class="row">
                <div class="form-group">
                    <label for="" class="col-xs-2 control-label">Pseudo : </label>
                    <div class="col-xs-10">
                        <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Votre pseudo" required autofocus>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label for="" class="col-xs-2 control-label">Mot de passe : </label>
                    <div class="col-xs-10">
                        <input type="password" name="_password" class="form-control" placeholder="Votre mot de passe" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                </div>
            </div>
        </fieldset>
    </form>
{% endblock %}
